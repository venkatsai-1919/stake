        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #4facfe, #00f2fe);
            text-align: center;
            padding: 20px;
            color: white;
        }
        .container {
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            max-width: 400px;
            margin: auto;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            color: black;
        }
        input, button {
            margin: 10px;
            padding: 12px;
            width: 80%;
            border-radius: 5px;
            border: none;
            font-size: 16px;
        }
        input {
            background: rgba(255, 255, 255, 0.8);
            border: 1px solid #ccc;
            transition: 0.3s;
        }
        input:focus {
            border-color: #4facfe;
            outline: none;
            box-shadow: 0 0 5px rgba(79, 172, 254, 0.8);
        }
        button {
            background: linear-gradient(to right, #28a745, #218838);
            color: white;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s;
        }
        button:hover {
            background: linear-gradient(to right, #218838, #1e7e34);
            transform: scale(1.05);
        }
        .result {
            margin-top: 15px;
            font-weight: bold;
            padding: 10px;
            background: rgba(255, 255, 255, 0.9);
