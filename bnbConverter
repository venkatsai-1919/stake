<body>
    <div class="container">
        <h2>BNB Betting Calculator</h2>
        <label>Team 1 Odds:</label>
        <input type="number" id="team1Odds" placeholder="Enter team 1 odds" step="0.01">
        
        <label>Team 2 Odds:</label>
        <input type="number" id="team2Odds" placeholder="Enter team 2 odds" step="0.01">
        
        <label>BNB to INR Rate:</label>
        <input type="number" id="bnbToInr" placeholder="Enter BNB to INR rate" step="0.01">
        
        <label>Desired Output Amount in INR:</label>
        <input type="number" id="desiredInr" placeholder="Enter desired output in INR" step="0.01">
        
        <button onclick="calculateBetAmounts()">Calculate</button>
        
        <div class="result" id="result"></div>
    </div>

    <script>
        function calculateBetAmounts() {
            let team1Odds = parseFloat(document.getElementById('team1Odds').value);
            let team2Odds = parseFloat(document.getElementById('team2Odds').value);
            let bnbToInr = parseFloat(document.getElementById('bnbToInr').value);
            let desiredInr = parseFloat(document.getElementById('desiredInr').value);
            
            if (isNaN(team1Odds) || isNaN(team2Odds) || isNaN(bnbToInr) || isNaN(desiredInr)) {
                document.getElementById('result').innerHTML = "Please enter valid inputs.";
                return;
            }
            
            let desiredBnb = desiredInr / bnbToInr;
            let betAmountTeam1 = desiredBnb / team1Odds;
            let betAmountTeam2 = desiredBnb / team2Odds;
            
            document.getElementById('result').innerHTML = `
                Bet on Team 1: ${betAmountTeam1.toFixed(6)} BNB<br>
                Bet on Team 2: ${betAmountTeam2.toFixed(6)} BNB
            `;
        }
    </script>
</body>
</html>
